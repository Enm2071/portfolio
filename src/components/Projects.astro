---
import { ExternalLink, Github } from "lucide-astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const projects = [
  {
    title: t("project_1_title"),
    description: t("project_1_description"),
    tags: ["React", "Recharts", "Tailwind", "Node.js"],
    image:
      "https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&w=800&q=80",
  },
  {
    title: t("project_2_title"),
    description: t("project_2_description"),
    tags: ["Next.js", "OpenAI API", "Stripe", "TypeScript"],
    image:
      "https://images.unsplash.com/photo-1677442136019-21780ecad995?auto=format&fit=crop&w=800&q=80",
  },
  {
    title: t("project_3_title"),
    description: t("project_3_description"),
    tags: ["Vue.js", "Firebase", "Pinia", "Sass"],
    image:
      "https://images.unsplash.com/photo-1507925921958-8a62f3d1a50d?auto=format&fit=crop&w=800&q=80",
  },
];
---

<section id="projects" class="projects-section">
  <div class="projects-container">

    <!-- Header -->
    <div class="projects-header">
      <div>
        <h2 class="projects-title" set:html={t("projects_title")}></h2>

        <p class="projects-subtitle">
          {t("projects_subtitle")}
        </p>
      </div>

      <a 
        href="https://github.com/Enm2071"
        target="_blank"
        class="github-button"
      >
        <Github class="icon-sm" /> {t("projects_github_button")}
      </a>
    </div>

    <!-- Projects Grid -->
    <div class="projects-grid">
      {projects.map((project, index) => (
        <div 
          class="project-card animate-fade-up"
          style={`animation-delay: ${index * 0.2}s`}
        >
          <div class="card">

            <!-- Image -->
            <div class="card-image">
              <img src={project.image} alt={project.title} />

              <!-- Hover Icons -->
              <div class="image-hover">
                <a class="icon-circle">
                  <Github class="icon-md" />
                </a>
                <a class="icon-circle primary-bg">
                  <ExternalLink class="icon-md" />
                </a>
              </div>
            </div>

            <!-- Content -->
            <div class="card-content">
              <h3 class="card-title">{project.title}</h3>
              <p class="card-description">{project.description}</p>

              <div class="tags">
                {project.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>

          </div>
        </div>
      ))}
    </div>

  </div>
</section>

<style>
  /* ======================================================
        VARIABLES
  ====================================================== */
  :root {
    --primary: #3b82f6;
    --purple: #a855f7;
    --foreground: #f8fafc;
    --muted: #a3a3a3;
    --background: #111418;
    --card-bg: rgba(255,255,255,0.05);
    --border-light: rgba(255,255,255,0.1);
  }

  /* ======================================================
        SECTION BASE
  ====================================================== */
  .projects-section {
    padding: 6rem 0;
  }

  .projects-container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* ======================================================
        HEADER
  ====================================================== */
  .projects-header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .projects-header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  .projects-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--foreground);
    margin-bottom: 0.5rem;
  }

  .projects-title .primary {
    color: var(--primary);
  }

  @media (min-width: 768px) {
    .projects-title {
      font-size: 3rem;
    }
  }

  .projects-subtitle {
    color: var(--muted);
    max-width: 40rem;
    line-height: 1.6;
  }

  .github-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border: 1px solid var(--border-light);
    padding: 0.6rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.9rem;
    text-decoration: none;
    color: var(--foreground);
    transition: background 0.2s ease;
  }

  .github-button:hover {
    background: rgba(255,255,255,0.07);
  }

  .icon-sm {
    width: 18px;
    height: 18px;
  }

  /* ======================================================
        GRID
  ====================================================== */
  .projects-grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* ======================================================
        CARD
  ====================================================== */
  .project-card {
    opacity: 0;
    transform: translateY(24px);
  }

  .card {
    background: var(--card-bg);
    backdrop-filter: blur(12px);
    border: 1px solid var(--border-light);
    border-radius: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: box-shadow .3s ease;
    height: 100%;
  }

  .card:hover {
    box-shadow: 0px 10px 25px rgba(0,0,0,0.4);
  }

  /* ======================================================
        CARD IMAGE
  ====================================================== */
  .card-image {
    position: relative;
    height: 12rem;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform .5s ease;
  }

  .card-image:hover img {
    transform: scale(1.1);
  }

  .image-hover {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.45);
    opacity: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    transition: opacity .3s ease;
  }

  .card-image:hover .image-hover {
    opacity: 1;
  }

  .icon-circle {
    padding: 0.75rem;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex;
    transition: background .2s ease;
  }

  .icon-circle:hover {
    background: rgba(255,255,255,0.3);
  }

  .primary-bg {
    background: var(--primary);
  }

  .primary-bg:hover {
    background: #2563eb;
  }

  .icon-md {
    width: 22px;
    height: 22px;
    color: white;
  }

  /* ======================================================
        CARD CONTENT
  ====================================================== */
  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .card-title {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--foreground);
  }

  .card-description {
    color: var(--muted);
    margin-bottom: 1.25rem;
    line-height: 1.5;
    flex-grow: 1;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.35rem 0.75rem;
    font-size: 0.75rem;
    background: rgba(255,255,255,0.07);
    border: 1px solid var(--border-light);
    border-radius: 999px;
    color: var(--foreground);
  }

  /* ======================================================
        ANIMATION
  ====================================================== */
  @keyframes fade-up {
    from { opacity: 0; transform: translateY(24px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-up {
    animation: fade-up 0.6s ease-out forwards;
  }
</style>
